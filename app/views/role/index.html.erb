<p id="notice"><%= notice %></p>
<% @roles_users.each do |role,users| %>
    <h1><%= translate("role."+role) %></h1>

    <table>
      <thead>
        <tr>
          <th>Email</th>
          <th>Show</th>
          <th>Edit</th>
        </tr>
      </thead>

      <tbody>
        <% users.each do |user| %>
          <tr>
            <td><%= user.email %></td>

            <td><%= link_to 'Show', [current_user,user.personal_information] %></td>
            <td><%= link_to 'Edit', edit_user_role_path(user) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
<% end %>
<% if @roles_users.empty? %>
  <h1> No users </h1>
<% end %>
