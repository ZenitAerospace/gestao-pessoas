<h2>Sign up</h2>

<%= form_for(@user, as: resource_name, url:  user_registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email, autofocus: true %>
  </div>

  <div class="form-group">
    <label for="role" class="control-label col-sm-3">Permiss√£o de acesso</label>
    <div class="col-sm-6">
	<%= select_tag(:role,options_for_select(@roles), {class:"form-control"}) %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= render "users/shared/links" %>
