<div class='panel panel-default'>
  <div class='panel-heading'>
    <h4>Cadastrar membro</h4>
  </div>
  <div class='panel-body'>
    <%= form_for(@user, as: resource_name, url:  user_registration_path(resource_name), role: 'form') do |f| %>
      <%= devise_error_messages! %>

      <div class='form-group'>
        <%= f.label :email %>
        <div class='input-group'>
          <%= f.text_field :email, autofocus: true, class: 'form-control' %>
          <span class='input-group-addon'>@zenitaerospace.com</span>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :role %>
        <%= select_tag(:role,options_for_select(@roles), class:'form-control') %>
      </div>
      <%= f.submit({class: 'btn btn-primary'}) %>
    <% end %>
  </div>
</div>
