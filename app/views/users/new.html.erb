<center><h2>Cadastrar-se</h2></center>


<%= form_for(@resource, url: new_registration_path) do |f| %>
  <% if not @resource.errors.empty? %>
    <div id="error_explanation">
    <h2><%=  I18n.t("errors.messages.not_saved",
             count: @resource.errors.count,
            resource: @resource.class.model_name.human.downcase) %></h2>
    <ul>
        <% @resource.errors.full_messages.each  do |text| %>
            <li><%= text %></li>
        <% end %>
    </ul></div>
  <% end %>
  <div class="row">
    <div class="small-6 large-centered columns">
     <div class="login-box">
          <%= f.label :email %>
      <div class="input-group">
        <div class="field">
          <%= f.text_field :email, autofocus: true %>
        </div>
        <span class="input-group-label">@zenitaerospace.com</span>
      </div>
          <div class="buttons">
            <%= f.submit %>
          </div>
    </div>
    </div>
  </div>
  
<% end %>

