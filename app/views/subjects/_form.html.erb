<%= form_for (@subject), role: "form", html: { multipart: true, class: 'form-horizontal' }  do |f| %>
<%= render 'layouts/error_messages', object: f.object %>
  <div class="form-group">
    <%= f.label :name, class: 'col-xs-3'%>
    <div class='col-xs-9'><%= f.text_field :name , class: "form-control", placeholder: "Ex: Calculo 01" %></div>
  </div>
  <hr>
  <div class="actions">
    <%= f.submit({class: "btn btn-primary"}) %>
  </div>
<% end %>

