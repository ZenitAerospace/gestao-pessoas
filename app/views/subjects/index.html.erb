<div class="panel panel-default">
    <div class="panel-heading">
        <div class="contentName">
          <h4>Lista de disciplinas</h4>
        </div>
         <div class="contentButton">
            <% if see_edit?(@subject) %>
                <%= button_to "Adicionar nova matÃ©ria", new_subject_path, :class => "btn btn-default", :method => :get %>
            <% end %>
        </div>
    </div>
    <div class="row">
      <ul class='col-sm-12 info-group'>
      <div class="tab-content">
          <%= grid(@subject_grid, show_filters: :when_filtered) do |subject|
            subject.blank_slate do
              '<div class="alert alert-info" role="alert">Nenhum registro encontrado</div>'
            end
            subject.column name: 'Nome disciplina', attribute: 'name' do |subject|
              subject.name
            end
            subject.column name: 'Editar' do |subject|
              link_to( 'Modificar', edit_subject_path(subject))
            end
            subject.column name: 'Deletar' do |subject|
              link_to('Deletar', subject, method: :delete, data: { confirm: 'VocÃª tem certeza?' })
            end

          end %>
        </div>    
    </div>
</div>