<div class="panel panel-default">
    <div class="panel-heading">
        <div class="contentName">
            <h4>Estágio</h4>
       </div>
         <div class="contentButton">         
            <%= button_to "Ver perfil professional", [@professional_profile.user,@professional_profile], :class => "btn btn-default", :method => :get %>
        </div>
    </div>
    <div class="row">
      <ul class="col-sm-12 info-group">
          <li class='info-group-item'>
            <label>Nome:</label>
              <%= @internship.name %>
          </li>
          <li class='info-group-item'>
            <label>Empresa:</label>
              <%= @internship.company %>
          </li>
          <li class='info-group-item'>
            <label>Descrição:</label>
              <%= @internship.description %>
          </li>
          <li class='info-group-item'>
            <label>Duração em horas:</label>
              <%= @internship.duration %>
          </li>
      </ul>
    </div>  
</div>