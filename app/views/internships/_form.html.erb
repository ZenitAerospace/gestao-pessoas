<%= form_for([@professional_profile.user,@professional_profile,@internship]) do |f| %>
 <%= render 'layouts/error_messages', object: f.object %>
 <div class="form-group">
   <%= f.label "Nome", class: 'col-xs-3' %>
   <div class='col-xs-9'>
     <%= f.text_field :name, class: "form-control" %>
   </div>
 </div> 
 <div class="form-group">
   <%= f.label "Compania", class: 'col-xs-3' %>
   <div class='col-xs-9'>
     <%= f.text_field :company, class: "form-control" %>
   </div>
 </div> 
 <div class="form-group">
   <%= f.label "Descrição", class: 'col-xs-3' %>
   <div class='col-xs-9'>
     <%= f.text_field :description, class: "form-control" %>
   </div>
 </div> 
 <div class="form-group">
   <%= f.label "Duração (horas)" , class: 'col-xs-3' %> 
   <div class='col-xs-9'>
     <%= f.number_field :duration, class: "form-control" %>
   </div>
 </div>
  <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
  <div class="col-xs-12 alert alert-danger" id='error-image' style='display: none;' role="alert" ></div>
 <div class="actions"><%= f.submit({class: "btn btn-primary"}) %></div>
<% end %>
