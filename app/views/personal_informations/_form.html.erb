<%= form_for [@user,@information], role: "form", html: { multipart: true, class: 'form-horizontal' } do |f| %>
  <% if @information.errors.any? %>
    <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">×</button>
      <h2>Não foi possível alterar as infomações. <%= pluralize(@information.errors.count, "erro") %>:</h2>
      <ul>
          <% @information.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
      </ul>
    </div>
  <% end %>

