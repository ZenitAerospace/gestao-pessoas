
<div class="panel panel-default">
    <div class="panel-heading">
        <div class="contentName">
          <h4><b>Busca</b></h4>
        </div>
    </div>
    <div class="row">
      <ul class='col-sm-12 info-group'>
      <ul class="disok col-lg-24">

<div class="col-lg-10"> 
  <%= form_tag searches_path, :method => 'get'  do %>
    <%= text_field_tag :search, params[:search], class: "form-control" %>
      <% @search = params[:search]  %>
</div>
      <span class="input-group-btn">
      <%= submit_tag "Busca", :name => nil, class: "btn btn-default" %>
      </span>
  <% end %>

  <br>
<% if @results.present? %>
  <div class="alert alert-info" role="alert" hidden>Não exite usuário com estes parametros: '<%= params[:search] %>'. Tente outro!</div>

<div class="panel panel-default">
  <div class="panel-heading"><h4><b>Resultados da pesquisa</b></h4></div>

  <div class="panel-heading">
    <%= link_to "Ordem crescente", {:action => "index", :search => @search, order: "crescente" } %> | <%= link_to "Ordem decrescente", {:action => "index", :search => @search, order: "decrescente" } %></div>
  <table class="table">
    <thead>
      <tr>
        <th>Email</th>
        <th>Link</th>
      </tr>
    </thead>
  <% @results.each do |key, value|%>
      <% value.each do |user|%>
      <tbody>
        <tr>
          <td><%= user.email %></td>
          <td><%= link_to( 'Ver perfil', user)%></td>
        </tr>
    </tbody>
      <% end %>
  <% end %>
  </table>
</div>    
  
<% else %>
  <br>
  <div class="alert alert-info" role="alert">Não exite usuário com estes parametros: ' <%= params[:search] %> '. Tente outro!</div>
<% end %>
