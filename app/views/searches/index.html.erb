
<div class="panel panel-default">
    <div class="panel-heading">
        <div class="contentName">
          <h4>Busca</h4>
        </div>
    </div>
    <div class="row">
      <ul class='col-sm-12 info-group'>
      <ul class="disok col-lg-24">

<div class="col-lg-10"> 
  <%= form_tag searches_path, :method => 'get'  do %>
    <%= text_field_tag :search, params[:search], class: "form-control" %>
      <% @search = params[:search]  %>
</div>
      <span class="input-group-btn">
      <%= submit_tag "Busca", :name => nil, class: "btn btn-default" %>
      </span>
  <% end %>

  
<% if @results.present? %>
  <div class="alert alert-info" role="alert" hidden>Não exite usuário com estes parametros: "<%= params[:search] %>". Tente outro!</div>

  <div id="ordem" >
  <br>
    <h5>Ordenar por ordem:</h5>
    <%= link_to "crescente", {:action => "index", :search => @search, order: "crescente" } %> | <%= link_to "decrescente", {:action => "index", :search => @search, order: "decrescente" } %>
  </div>
    <h5>Resultado da pesquisa</h5>
    
  <% @results.each do |key, value|%>
      <% value.each do |user|%>
          <%= user.email %> | <%= link_to( 'Ver perfil', user) %> <br>
      <% end %>
  <% end %>

<% else %>
  <br>
  <div class="alert alert-info" role="alert">Não exite usuário com estes parametros, tente outro! <%= params[:search] %> .</div>
<% end %>
